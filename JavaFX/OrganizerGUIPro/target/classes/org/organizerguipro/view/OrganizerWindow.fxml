            <Tooltip text="chosen item name" />
         </tooltip>
      </TextField>
      <Label layoutX="510.0" layoutY="300.0" text="Show one item">
         <tooltip>
            <Tooltip text="show one item header" />
         </tooltip>
      </Label>
      <TextField fx:id="itemToShowId" layoutX="510.0" layoutY="321.0" prefHeight="30.0" prefWidth="344.0" promptText="id">
         <tooltip>
            <Tooltip text="item to show Id" />
         </tooltip>
      </TextField>
      <Button fx:id="showItemBtn" layoutX="863.0" layoutY="320.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="72.0" text="Show">
