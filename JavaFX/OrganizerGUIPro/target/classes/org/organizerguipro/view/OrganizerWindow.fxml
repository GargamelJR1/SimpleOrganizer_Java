            <Font size="31.0" />
         </font>
         <tooltip>
            <Tooltip text="Organizer GUI PRO" />
         </tooltip>
      </Label>
      <TextField fx:id="newName" layoutX="510.0" layoutY="106.0" prefHeight="28.0" prefWidth="362.0" promptText="name">
         <tooltip>
            <Tooltip text="item to add name" />
