      <TextField fx:id="itemToRemoveId" layoutX="510.0" layoutY="240.0" prefHeight="30.0" prefWidth="344.0" promptText="id">
         <tooltip>
            <Tooltip text="item to remove Id" />
         </tooltip></TextField>
      <Button fx:id="removeBtn" layoutX="863.0" layoutY="239.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="72.0" text="Remove">
