            <Tooltip text="show chosen item button" />
         </tooltip>
      </Button>
      <Button fx:id="clearListBtn" layoutX="507.0" layoutY="563.0" mnemonicParsing="false" prefHeight="28.0" prefWidth="423.0" text="Clear list">
